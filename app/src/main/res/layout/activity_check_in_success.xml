<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckIn.CheckInSuccessActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/tv_checkInSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/dmsans_bold"
        android:text="Check In Successful"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_checkInSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_checkInSuccess"
        app:srcCompat="@drawable/checkin_success" />


    <TextView
        android:id="@+id/tv_checkInSuccessLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/dmsans_medium"
        android:text="The Rift Mid Valley"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkInSuccessLL" />

    <LinearLayout
        android:id="@+id/checkInSuccessLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_checkInSuccess">

        <TextView
            android:id="@+id/tv_checkInSuccessDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans_medium"
            android:text="28/06/2022"
            android:textColor="@color/white"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans_medium"
            android:text="|"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/tv_checkInSuccessTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/dmsans_medium"
            android:text="06:14PM"
            android:textColor="@color/white"
            android:textSize="20sp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_checkInSuccessDone"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_input"
        android:fontFamily="@font/dmsans_bold"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="#1AA7EC"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_riskStatusBox" />

    <ImageView
        android:id="@+id/iv_riskStatusBox"
        android:layout_width="165dp"
        android:layout_height="85dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_checkInSuccessLocation"
        app:srcCompat="@drawable/custom_input" />

    <ImageView
        android:id="@+id/iv_riskStatusTick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@+id/iv_riskStatusBox"
        app:layout_constraintTop_toTopOf="@+id/iv_riskStatusBox"
        app:srcCompat="@drawable/check_box" />

    <TextView
        android:id="@+id/tv_riskStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/dmsans_bold"
        android:text="Medium risk"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/iv_riskStatusTick"
        app:layout_constraintTop_toTopOf="@+id/iv_riskStatusBox" />

    <ImageView
        android:id="@+id/iv_vaccStatusBox"
        android:layout_width="165dp"
        android:layout_height="85dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_checkInSuccessLocation"
        app:srcCompat="@drawable/custom_input" />

    <ImageView
        android:id="@+id/iv_vaccStatusIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@+id/iv_vaccStatusBox"
        app:layout_constraintTop_toTopOf="@+id/iv_vaccStatusBox"
        app:srcCompat="@drawable/syringe" />

    <TextView
        android:id="@+id/tv_vaccStatusText"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/dmsans_bold"
        android:text="Not\nvaccinated"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/iv_vaccStatusIcon"
        app:layout_constraintTop_toTopOf="@+id/iv_vaccStatusBox" />
</androidx.constraintlayout.widget.ConstraintLayout>