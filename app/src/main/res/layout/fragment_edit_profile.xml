<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EditProfile">

    <TextView
        android:id="@+id/tv_editProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/dmsans_bold"
        android:text="Edit Profile"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_editProfilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_editProfileTitle"
        app:srcCompat="@drawable/profile_pic" />

    <ImageView
        android:id="@+id/iv_editEllipse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blue_ellipse" />

    <ImageView
        android:id="@+id/iv_editIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_editEllipse"
        app:layout_constraintTop_toTopOf="@+id/iv_editEllipse"
        app:srcCompat="@drawable/edit_pen" />

    <TextView
        android:id="@+id/tv_editProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/dmsans_regular"
        android:text="Name"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_editProfilePicture" />

    <EditText
        android:id="@+id/et_editProfileName"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:fontFamily="@font/dmsans_regular"
        android:hint="Adrian Tan"
        android:inputType="textPersonName"
        android:padding="18dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_editProfileName" />

    <TextView
        android:id="@+id/tv_editProfilePhoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/dmsans_regular"
        android:text="Phone Number"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_editProfileName" />

    <EditText
        android:id="@+id/et_editProfilePhoneNum"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:fontFamily="@font/dmsans_regular"
        android:hint="+60123456789"
        android:inputType="phone"
        android:padding="18dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_editProfilePhoneNum" />

    <TextView
        android:id="@+id/tv_editProfileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/dmsans_regular"
        android:text="Email address"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_editProfilePhoneNum" />

    <EditText
        android:id="@+id/et_editProfileEmail"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:fontFamily="@font/dmsans_regular"
        android:hint="adriantankx@gmail.com"
        android:inputType="textEmailAddress"
        android:padding="18dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_editProfileEmail" />

    <TextView
        android:id="@+id/tv_editProfileDOB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/dmsans_regular"
        android:text="Age"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_editProfileEmail" />

    <EditText
        android:id="@+id/et_editProfileDOB"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:fontFamily="@font/dmsans_regular"
        android:hint="28"
        android:inputType="date"
        android:padding="18dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_editProfileDOB" />

    <TextView
        android:id="@+id/tv_editProfileGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="165dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/dmsans_regular"
        android:text="Gender"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/tv_editProfileDOB"
        app:layout_constraintTop_toBottomOf="@+id/et_editProfileEmail" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_input"
        android:layout_marginStart="90dp"
        android:layout_marginTop="5dp"
        tools:layout_editor_absoluteX="257dp"
        tools:layout_editor_absoluteY="516dp"
        app:layout_constraintTop_toBottomOf="@id/tv_editProfileGender"
        app:layout_constraintStart_toEndOf="@id/et_editProfileDOB">

        <Spinner
            android:id="@+id/sp_signUpGender"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:padding="18dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_saveChangesEdit"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/blue_button"
        android:fontFamily="@font/dmsans_bold"
        android:text="Save Changes"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_editProfileDOB" />




</androidx.constraintlayout.widget.ConstraintLayout>