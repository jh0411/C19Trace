<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.GlobalFragment">

    <RelativeLayout
        android:id="@+id/relativeLayout_global"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toTopOf="parent"
        >

        <Spinner
            android:id="@+id/sp_globalCountry"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:padding="20dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_globalNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/new_cases_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout_global" />

    <ImageView
        android:id="@+id/iv_globalRecovered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="25dp"
        android:src="@drawable/recovered_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout_global" />

    <ImageView
        android:id="@+id/iv_globalDeath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/death_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_globalNew" />

    <ImageView
        android:id="@+id/iv_globalVaccinated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:src="@drawable/vaccinated_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_globalRecovered" />

    <TextView
        android:id="@+id/tv_globalNewNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/dmsans_bold"
        android:text="1,437,257"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_globalNew"
        app:layout_constraintStart_toStartOf="@+id/iv_globalNew"
        app:layout_constraintTop_toTopOf="@+id/iv_globalNew" />

    <TextView
        android:id="@+id/tv_globalNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/dmsans_medium"
        android:text="New Cases"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_globalNew"
        app:layout_constraintStart_toStartOf="@+id/iv_globalNew"
        app:layout_constraintTop_toBottomOf="@+id/tv_globalNewNum" />

    <TextView
        android:id="@+id/tv_globalRecNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/dmsans_bold"
        android:text="1,351,956"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_globalRecovered"
        app:layout_constraintStart_toStartOf="@+id/iv_globalRecovered"
        app:layout_constraintTop_toTopOf="@+id/iv_globalRecovered" />

    <TextView
        android:id="@+id/tv_globalRecovered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/dmsans_medium"
        android:text="Recovered"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_globalRecovered"
        app:layout_constraintStart_toStartOf="@+id/iv_globalRecovered"
        app:layout_constraintTop_toBottomOf="@+id/tv_globalRecNum" />

    <TextView
        android:id="@+id/tv_globalDedNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/dmsans_bold"
        android:text="3,686"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_globalDeath"
        app:layout_constraintStart_toStartOf="@+id/iv_globalDeath"
        app:layout_constraintTop_toTopOf="@+id/iv_globalDeath" />

    <TextView
        android:id="@+id/tv_globalDeath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/dmsans_medium"
        android:text="Deaths"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_globalDeath"
        app:layout_constraintStart_toStartOf="@+id/iv_globalDeath"
        app:layout_constraintTop_toBottomOf="@+id/tv_globalDedNum" />

    <TextView
        android:id="@+id/tv_globalVacNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/dmsans_bold"
        android:text="65.1%"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_globalVaccinated"
        app:layout_constraintStart_toStartOf="@+id/iv_globalVaccinated"
        app:layout_constraintTop_toTopOf="@+id/iv_globalVaccinated" />

    <TextView
        android:id="@+id/tv_globalVaccinated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/dmsans_medium"
        android:text="Administered\nVaccine"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_globalVaccinated"
        app:layout_constraintStart_toStartOf="@+id/iv_globalVaccinated"
        app:layout_constraintTop_toBottomOf="@+id/tv_globalVacNum" />

    <TextView
        android:id="@+id/tv_globalAllCase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/dmsans_medium"
        android:text="Total Confirmed Cases"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_globalDeath" />

    <TextView
        android:id="@+id/tv_global_allNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/dmsans_bold"
        android:text="485,243,022"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_globalAllCase" />


</androidx.constraintlayout.widget.ConstraintLayout>